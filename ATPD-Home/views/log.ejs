<script>
  function highlightRow(row) {
    // Alle anderen Zeilen deselektieren
    const rows = document.querySelectorAll("tbody tr");
    rows.forEach(r => r.classList.remove("selected"));

    // Geklickte Zeile markieren
    row.classList.add("selected");
  }
</script>

